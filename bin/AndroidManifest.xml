<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timetablealarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="com.timetablealarm.MyAlarmReceiver" >
            <intent-filter>
                <action android:name="MyAlarmAction" />
            </intent-filter>
        </receiver>

        <service android:name="com.timetablealarm.MyAlarmService" >
        </service>

        <activity
            android:name="com.timetablealarm.alarm.AlarmActivity"
            android:label="@string/title_activity_alarm" >
            
        </activity>
        <activity
            android:name="com.timetablealarm.alarm.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter >
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
