<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timetablealarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <receiver android:name="com.timetablealarm.alarm.MyAlarmReceiver" >
            <intent-filter>
                <action android:name="MyAlarmAction" />
            </intent-filter>
        </receiver>

        <service android:name="com.timetablealarm.alarm.MyAlarmService" >
        </service>

        <activity
            android:name="com.timetablealarm.alarm.AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>
        <activity
            android:name="com.timetablealarm.alarm.AlarmMenuActivity"
            android:label="@string/title_activity_alarm_menu" >
        </activity>
        <activity
            android:name="com.timetablealarm.alarm.MainActivity"
            android:label="@string/title_activity_alarm" >
        </activity>
        <activity
            android:name="com.timetablealarm.twitter.TwitterOAuthActivity"
            android:label="@string/title_activity_twitter_oauth" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="twittercallback" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.timetablealarm.MenuSelectActivity"
            android:label="@string/title_activity_menu_select" >
        </activity>
        <activity
            android:name="com.timetablealarm.GPSActivity"
            android:label="@string/title_activity_gps" >
        </activity>
        <activity
            android:name="com.timetablealarm.SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.timetablealarm.timetable.TimeTableCreate"
            android:label="@string/title_activity_menu_select" >
        </activity>
        <activity
            android:name="com.timetablealarm.timetable.TimeTableMain"
            android:label="@string/title_activity_menu_select" >
        </activity>
        <activity
            android:name="com.timetablealarm.timetable.TimeTableSetting"
            android:label="@string/title_activity_menu_select" >
        </activity>
        <activity
            android:name="com.timetablealarm.alarm.AlarmSettingActivity"
            android:label="@string/title_activity_alarm_setting" >
        </activity>
        <activity
            android:name="com.timetablealarm.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.timetablealarm.alarm.AlarmGPSSettingActivity"
            android:label="@string/title_activity_alarm_gpssetting" >
        </activity>
        <activity
            android:name="com.timetablealarm.alarm.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
    </application>

</manifest>
